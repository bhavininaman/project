@using Project.Web.Models;
@model ProductModel
@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<div id="detail">
    <h3>@Model.product</h3>
    @if (!String.IsNullOrEmpty(Model.imageName))
    {
        <img class="img-responsive" src="@Url.Content("~/Content/images/" + Model.imageName)" alt="@Model.product" />
    }
    else
    {
        <img class=" img-responsive" src="@Url.Content("~/Content/images" )" alt="@Model.product" />
    }
    <p class=" text-muted">@Model.description</p>
    <h4>@Model.productId </h4>
    <h4>@Model.product</h4>
    <h4>@Model.price</h4>
    <h4>@Model.categoryId</h4>
    <h4>@Model.imageName</h4>

    

</div>
